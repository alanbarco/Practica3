{% extends 'base.html.twig' %}

{% block title %}Usuario | Reporte{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #9aaebd;">
    <span class="navbar-brand mb-0 h1">Residente</span>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav ml-auto">
        <a class="nav-link" href="{{path('app_user')}}">Inicio</a>
        <a class="nav-link text-light" href="{{path('app_logout')}}"><span class="bi bi-box-arrow-right mr-1"></span>Cerrar sesión</a>
      </div>
    </div>
  </nav>
  <div class="container mt-5 pt-5">
    <div class="row">
      <div class="col-12 col-sm-7 col-md-6 m-auto">
        <div class="card border-0 shadow">
          <div class="card-body">
                {{form_start(form)}}
                <label>Descripción del incidente: </label>
                {{form_widget(form.tipo)}}
                <button type="submit" class="btn btn-lg btn-primary">Reportar incidente</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  

{{form_end(form)}}

  </div>

{% endblock %}
